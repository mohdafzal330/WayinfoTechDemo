@{
    ViewBag.Title = "Home Page";
}
@model GrubberDemo.Models.EmployeeViewModel

<div class="container mt-2">
    <form class="form-horizontal" action="/Home/AddEditEmployee">
        <div class="row" >
            <div class="col-8"><h1>Customer form</h1></div>
            <div class="col-2">
                <a href="/Home/GetAllEmployees" class="btn btn-md btn-primary">All Customers</a>
            </div>
        </div>
        @Html.HiddenFor(h=>h.PkEmployeeId)
        
        <div class="row mt-3">
            <div class="col-5">
                <label>FirstName</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class= "form-control", placeholder = "First Name", required="ture" })
            </div>
            <div class="col-5">
                <label>LastName</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name", required = "ture" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-5">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class= "form-control", placeholder = "First Name", required = "ture" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-5">
                <label>Mobile</label>
                @Html.TextBoxFor(m => m.Mobile, new { @class= "form-control", placeholder = "First Name", required = "ture" })
            </div>
        </div>
        
        
        
        <div class="row mt-4">
            <div class="col-10 text-center">
                <input type="submit" value="Save Customer" class="btn btn-md btn-success" />
                <a href="/" class="btn btn-md btn-danger ml-2" >Cancle</a>
            </div>
        </div>
    </form>
</div>